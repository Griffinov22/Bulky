@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@using BulkyWebRazor_Temp.Models

<h1>Category List</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary "><i class="bi bi-plus-circle"></i> Create Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category obj in Model.Categories!.OrderBy(obj => obj.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-page="/categories/edit" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-page="/categories/delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>