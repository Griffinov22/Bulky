@model List<Company>


<div class="card shadow border-0 mt-3">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row pb-3">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary "><i class="bi bi-plus-circle"></i> Create Company</a>
            </div>
        </div>
        <table class="table table-bordered table-striped w-100" id="tblData">     
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Street</th>    
                    <th></th>
                </tr>
            </thead>    
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js" asp-append-version="true"></script>
}
