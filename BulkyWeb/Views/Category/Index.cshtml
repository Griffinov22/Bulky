@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-circle"></i> Create Category</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category obj in Model.OrderBy(obj => obj.DisplayOrder)) {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>